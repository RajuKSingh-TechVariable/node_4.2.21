{
  "mongoDbUrl": "mongodb://127.0.0.1/my_database1",
  "logger": {
    "appenders": {
      "out": {
        "type": "stdout"
      },
      "access": {
        "type": "dateFile",
        "filename": "log/access.log",
        "pattern": "-yyyy-MM-dd",
        "category": "http"
      },
      "app": {
        "type": "file",
        "filename": "log/app.log",
        "maxLogSize": 10485760,
        "numBackups": 3
      },
      "errorFile": {
        "type": "file",
        "filename": "log/errors.log"
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "errorFile"
      }
    },
    "categories": {
      "default": { "appenders": ["app", "out"], "level": "ALL" },
      "critical": { "appenders": ["errors", "out"], "level": "ALL" },
      "email": { "appenders": ["errors", "out"], "level": "ALL" }
    }
  },
  "loggerCategories": {
    "default": "default",
    "critical": "critical",
    "email": "email"
  }
}
